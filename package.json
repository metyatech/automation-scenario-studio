{
  "name": "@metyatech/automation-scenario-studio",
  "version": "0.1.0",
  "description": "CLI entrypoint for recording, editing, validating, and running automation scenarios",
  "type": "module",
  "bin": {
    "automation-scenario": "dist/src/cli.js"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "python"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "scan:deps": "npm audit --audit-level=high",
    "verify": "npm run format && npm run lint && npm run typecheck && npm test && npm run build && npm run scan:deps",
    "run": "tsx src/cli.ts"
  },
  "dependencies": {
    "@metyatech/automation-scenario-renderer": "github:metyatech/automation-scenario-renderer#main",
    "@metyatech/automation-scenario-runtime": "github:metyatech/automation-scenario-runtime#main",
    "@metyatech/automation-scenario-spec": "github:metyatech/automation-scenario-spec#main"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
